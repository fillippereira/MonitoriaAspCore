@page
@model LoginModel

@{ Layout = null;
    ViewData["Title"] = "Monitoria - Efetuar Login";
}
<title>@ViewData["Title"]</title>
@if(ViewData["StatusMessage"] != null)
{
    ViewData["StatusMessage"].ToString();

}


<environment include="Development">
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/estilo.css?version=12" />
</environment>
<environment exclude="Development">
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/estilo.min.css?version=12" />
</environment>


<div class="container-login100">
    <div class="wrap-login100">
        <form method="post" class="login100-form validate-form">

            <span class="login100-form-title p-b-48 p-0">
                <img src="~/Images/icon.png" class="img-fluid" style="width:80%" />
            </span>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="wrap-input100 m-b-23">
                <input asp-for="Input.UserName" class="input100" />
                <span class="focus-input100-login" data-placeholder="Login"></span>
            </div>

            <div class="wrap-input100 m-b-23">
                <span class="btn-show-pass">
                    <i class="fa fa-eye"></i>
                </span>
                <input asp-for="Input.Password" class="input100" />
                <span class="focus-input100-senha" data-placeholder="Senha"></span>
            </div>

            <div class="wrap text-left">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        Lembrar-me?
                    </label>
                </div>
            </div>

            <div class="container-login100-form-btn p-b-31">
                <button class="btn btn-outline-secondary w-100">
                    Login
                </button>
            </div>

            <div class="text-center p-b-25">
                <a class="text-primary" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
            </div>

            <div class="text-center p-t-50">
                <span class="text-muted d-block">
                    Não possui uma conta?
                </span>
                <a class="text-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registre-se</a>
            </div>
        </form>

    </div>

</div>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/js/main.js?version=12"></script>
</environment>
<environment exclude="Development">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/js/main.js?version=12"></script>
</environment>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
