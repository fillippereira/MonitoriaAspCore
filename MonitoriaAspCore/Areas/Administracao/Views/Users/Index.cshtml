
@using MonitoriaAspCore.Models
@model IEnumerable<ApplicationUser>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Monitoria - Gerenciar Usuário";
}

<div class="container-fluid">
    <div class="card mt-3 shadow">
        <div class="card-header">
            <label class="card-title">Usuários</label>
            <a asp-action="Create" class="btn btn-sm btn-info float-right">Novo usuário</a>
        </div>
        <div class="card-body">
            <table class="table table-sm table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Perfis</th>
                    <th>Ação</th>
                </tr>
               @foreach (ApplicationUser user in Model)
                {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <select class="multiSelect" multiple="multiple" name="roles[]">
                            @foreach (var UserRole in user.UserRoles)
                            {
                                <option selected value="@UserRole.RoleId">@UserRole.Role.Name</option>
                            }
                        </select>
                    </td>
                    <td>
                        <a class="btn btn-sm" title="Editar" asp-action="Edit" asp-route-id="@user.Id"><i class="fa fa-pen text-primary"></i></a>
                        <a class="btn btn-sm" title="Excluir" asp-action="Delete" asp-route-id="@user.Id"><i class="fa fa-trash text-danger"></i></a>
                    </td>
                </tr>

                }
            </table>
        </div>
    </div>
</div>


