
@using MonitoriaAspCore.Models
@model IEnumerable<ApplicationUser>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}

<h2>Index</h2>




<h1 class="bg-info text-white">All Users</h1>
<a asp-action="Create" class="btn btn-secondary">Create a User</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Perfis</th>
        <th>Editar</th>
        <th>Excluir</th>
    </tr>
    @foreach (ApplicationUser user in Model)
    {
    <tr>
        <td>@user.Id</td>
        <td>@user.UserName</td>
        <td>@user.Email</td>
        <td>
            <select class="multiSelect" multiple="multiple" name="roles[]">
                @foreach (var UserRole in user.UserRoles)
                {
                    <option selected value="@UserRole.RoleId">@UserRole.Role.Name</option>
                }
            </select>
          
        </td>
        <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Editar</a></td>
        <td><a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.Id">Excluir</a></td>


    </tr>

    }
</table>


