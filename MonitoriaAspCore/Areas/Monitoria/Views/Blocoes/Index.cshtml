
@model IEnumerable<MonitoriaAspCore.Areas.Monitoria.Models.Bloco>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}

<div class="content-fluid">
    <form action="" method="POST" class="my-3">
        <h6>Informação do Checklist:</h6>
        <div class="form-row">
            <div class="form-group col-4">
                <label for="name_checklist">Nome do checklist:</label>
                <input type="text" class="form-control" name="name_checklist" id="name_checklist" placeholder="Nome do checklist." maxlength="40">
                <small class="text-muted">
                    O nome deve ter no máximo 40 Caracteres.
                </small>
            </div>
            <div class="form-group col-6">
                <label for="descricao">Descrição do checklist:</label>
                <input type="text" name="descricao" id="descricao" maxlength="60" class="form-control" placeholder="Descrição detalhada do checklist." />
                <small class="text-muted">
                    A descrição deve ter no máximo 60 Caracteres.
                </small>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-3">
                <label for="tipo_checklist">Tipo Checklist:</label>
                <select name="tipo_checklist" id="tipo_checklist" class="form-control">
                    <option value="diagnostico">Diagnóstico</option>
                    <option value="decremental">Monitoria Decremental</option>
                    <option value="avaliativa">Avaliativa</option>
                </select>
            </div>
            <div class="form-group col-3">
                <label for="status_checklist">Status:</label>
                <select name="status_checklist" id="status_checklist" class="form-control">
                    <option value="diagnostico">Ativo</option>
                    <option value="decremental">Inativo</option>
                </select>
            </div>
        </div>
        <hr class="mb-3" />
        <h6>Campanhas Elegíveis:</h6>
        <div class="row">
            <div class="col bg-white border rounded p-2 mx-3">
                <div class="w-100 d-flex justify-content-between">
                    <h6 class="p-1">Produtos:</h6>
                    <button type="button" class="btn btn-sm btn-outline-dark">
                        <span class="fas fa-check-double"></span>
                    </button>
                </div>
                <hr class="my-1" />
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" name="produtos" class="custom-control-input" id="produto_3" value="3" />
                    <label class="custom-control-label" for="produto_3">Claro</label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" name="produtos" id="produto_20" class="custom-control-input" value="20" />
                    <label class="custom-control-label" for="produto_20">Vivo</label>
                </div>
            </div>
            <div class="col bg-white border rounded p-2 mx-3">
                <div class="w-100 d-flex justify-content-between">
                    <h6 class="p-1">Operações:</h6>
                    <button type="button" class="btn btn-sm btn-outline-dark">
                        <span class="fas fa-check-double"></span>
                    </button>
                </div>
                <hr class="my-1" />
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" name="operacoes" class="custom-control-input" id="operacoes_1" value="1" />
                    <label class="custom-control-label" for="operacoes_1">Claro Pre</label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" name="operacoes_2" id="operacoes_2" class="custom-control-input" value="2" />
                    <label class="custom-control-label" for="operacoes_2">Claro Controle</label>
                </div>
            </div>
            <div class="col bg-white border rounded p-2 mx-3">
                <div class="w-100 d-flex justify-content-between">
                    <h6 class="p-1">Campanhas:</h6>
                    <button type="button" class="btn btn-sm btn-outline-dark d-none">
                        <span class="fas fa-check-double"></span>
                    </button>
                </div>
                <hr class="my-1" />
                <p class="text-muted">Selecione uma Operação...</p>
            </div>
        </div>
        <hr class="mb-3" />
        <h6>Dados da ficha:</h6>
        <div class="row">
            <div class="col bg-white border rounded p-2 mx-3">
                <div class="w-100 overflow-auto" id="lista-dados-ficha" style="max-height:250px;">
                    <p>Dados Obrigadorios:</p>
                    <div class="row linha_campos_obrigatorios mx-0">
                        <div class="input-group col p-1 bg-light border">
                            <input type="text" name="nome_campo" value="Almope" class="form-control form-control-sm disabled" disabled placeholder="Nome do campo de dados" />
                            <select name="tipo_campo" class="form-control form-control-sm disabled" disabled>
                                <option value="texto">Texto</option>
                                <option value="number" selected>Numeral</option>
                                <option value="date">Data</option>
                                <option value="datetime">Data e Hora</option>
                                <option value="select">Seleção</option>
                            </select>
                            <input type="number" name="max_campo" class="form-control form-control-sm" placeholder="Número de Caracteres" disabled />
                        </div>
                    </div>
                    <div class="row linha_campos_obrigatorios mx-0">
                        <div class="input-group col p-1 bg-light border">
                            <input type="text" name="nome_campo" value="Nome" class="form-control form-control-sm disabled" disabled placeholder="Nome do campo de dados" />
                            <select name="tipo_campo" class="form-control form-control-sm disabled" disabled>
                                <option value="texto" selected>Texto</option>
                                <option value="number">Numeral</option>
                                <option value="date">Data</option>
                                <option value="datetime">Data e Hora</option>
                                <option value="select">Seleção</option>
                            </select>
                            <input type="number" name="max_campo" class="form-control form-control-sm" value="80" placeholder="Número de Caracteres" disabled />
                        </div>
                    </div>
                    <div class="row linha_campos_obrigatorios mx-0">
                        <div class="input-group col p-1 bg-light border">
                            <input type="text" name="nome_campo" value="Superior1" class="form-control form-control-sm disabled" disabled placeholder="Nome do campo de dados" />
                            <select name="tipo_campo" class="form-control form-control-sm disabled" disabled>
                                <option value="texto" selected>Texto</option>
                                <option value="number">Numeral</option>
                                <option value="date">Data</option>
                                <option value="datetime">Data e Hora</option>
                                <option value="select">Seleção</option>
                            </select>
                            <input type="number" name="max_campo" class="form-control form-control-sm" value="80" placeholder="Número de Caracteres" disabled />
                        </div>
                    </div>
                    <div class="row linha_campos_obrigatorios mx-0">
                        <div class="input-group col p-1 bg-light border">
                            <input type="text" name="nome_campo" value="Superior2" class="form-control form-control-sm disabled" disabled placeholder="Nome do campo de dados" />
                            <select name="tipo_campo" class="form-control form-control-sm disabled" disabled>
                                <option value="texto" selected>Texto</option>
                                <option value="number">Numeral</option>
                                <option value="date">Data</option>
                                <option value="datetime">Data e Hora</option>
                                <option value="select">Seleção</option>
                            </select>
                            <input type="number" name="max_campo" class="form-control form-control-sm" value="80" placeholder="Número de Caracteres" disabled />
                        </div>
                    </div>
                    <div class="row linha_campos_obrigatorios mx-0">
                        <div class="input-group col p-1 bg-light border">
                            <input type="text" name="nome_campo" value="Superior3" class="form-control form-control-sm disabled" disabled placeholder="Nome do campo de dados" />
                            <select name="tipo_campo" class="form-control form-control-sm disabled" disabled>
                                <option value="texto" selected>Texto</option>
                                <option value="number">Numeral</option>
                                <option value="date">Data</option>
                                <option value="datetime">Data e Hora</option>
                                <option value="select">Seleção</option>
                            </select>
                            <input type="number" name="max_campo" class="form-control form-control-sm" value="80" placeholder="Número de Caracteres" disabled />
                        </div>
                    </div>
                    <div class="row linha_campos_obrigatorios mx-0">
                        <div class="input-group col p-1 bg-light border">
                            <div class="input-group-append d-none">
                                <button type="button" class="btn btn-sm">
                                    <span class="fas fa-plus-square"></span>
                                </button>
                            </div>
                            <input type="text" name="nome_campo" value="TMT" class="form-control form-control-sm disabled" disabled placeholder="Nome do campo de dados" />
                            <select name="tipo_campo" class="form-control form-control-sm disabled" disabled>
                                <option value="texto">Texto</option>
                                <option value="number">Numeral</option>
                                <option value="date">Data</option>
                                <option value="datetime">Data e Hora</option>
                                <option value="select">Seleção</option>
                                <option value="time" selected>Tempo</option>
                            </select>
                            <input type="number" name="max_campo" class="form-control form-control-sm" value="" placeholder="Número de Caracteres" disabled />
                        </div>
                    </div>
                    <hr class="mb-3" />
                    <p>Dados Opcionais:</p>
                </div>
                <hr class="mb-2" />
                <button type="button" class="btn btn-sm btn-outline-info w-100">
                    <span class="fas fa-plus"></span>
                    Adicionar Campo
                </button>
            </div>
            <div class="col bg-white border rounded p-2 mx-3">
                <h6>Dados Complementares:</h6>
                <div class="w-100 overflow-auto" id="dados-ficha-info-complementares" style="height:100%;"></div>
            </div>
        </div>
        <hr class="mb-3" />
        <h6>Irregularidades da ficha:</h6>
        <div class="row">
            <div class="col bg-white border rounded p-2 mx-3 w-100" style="height:400px;" contenteditable="true" id="editable-irregularidades-ficha"></div>
            <div class="col bg-white border rounded p-2 mx-3 w-100 overflow-auto" style="height:400px;" id="irregularidades-ficha">
                <div class="row"></div>
            </div>
        </div>
        <hr class="mb-2" />
        <button type="button" class="btn btn-sm btn-outline-info w-100" id="carregar-ficha">
            <span class="fas fa-stream"></span>
            Carregar Ficha
        </button>
    </form>
</div>

